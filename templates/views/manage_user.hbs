    <!-- [ Main Content ] start -->
    <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
            <div class="pcoded-content">
                <div class="pcoded-inner-content">
                    <!-- [ breadcrumb ] start -->
                    <div class="page-header">
                        <div class="page-block">
                            <div class="row align-items-center">
                                <div class="col-md-12">
                                    <div class="page-header-title">
                                        <h5 class="m-b-10">User</h5>
                                    </div>
                                    <ul class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="/dashboard"><i
                                                    class="feather icon-home"></i></a></li>
                                        <li class="breadcrumb-item"><a href="/users">User</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- [ breadcrumb ] end -->
                    <div class="main-body">
                        <div class="page-wrapper">
                            <!-- [ Main Content ] start -->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>List Users</h5>
                                        </div>
                                        <div class="card-block table-border-style">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Avatar</th>
                                                            <th>First Name</th>
                                                            <th>Last Name</th>
                                                            <th>DOB</th>
                                                            <th>Email</th>
                                                            <th>Phone</th>
                                                            <th>Created At</th>
                                                            <th>Active</th>
                                                            <th>Type</th>
                                                            <th>Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {{#each userPage}}
                                                        <tr>
                                                            <th scope="row">{{@index}}</th>
                                                            <td><img class="rounded-circle" style="width:40px;"
                                                                    src="https://avatar.oxro.io/avatar.svg?name={{firstname}} {{lastname}}&caps=1"
                                                                    alt="activity-user"></td>
                                                            <td>{{firstname}}</td>
                                                            <td>{{lastname}}</td>
                                                            <td>{{moment dob format="DD-MM-YYYY"}}</td>
                                                            <td>{{email}}</td>
                                                            <td>+{{phone}}</td>
                                                            <td>{{moment createdAt format="DD-MM-YYYY"}}</td>
                                                            {{#ifCond active  '===' true}}
                                                                <td><span class="tag" style="background-color: #00d1b2;color: #fff;">True</span></td>
                                                            {{else}}
                                                                <td><span class="tag" style="background-color: #f14668;color: #fff;">False</span></td>
                                                            {{/ifCond}}


                                                            {{#ifCond type_account  '===' 0}}
                                                                <td><span class="tag" style="background-color: #00d1b2;color: #fff;">User</span></td>
                                                            {{else}}
                                                                <td><span class="tag" style="background-color: #f14668;color: #fff;">Admin</span></td>
                                                            {{/ifCond}}


                                                            {{#ifCond type_account  '===' 0}}
                                                                <td><span class="tag" onclick="deleteUser(this,{{id}})" style="background-color: #f14668;color: #fff;"><i class="feather icon-trash"></i>Delete</span>
                                                            {{else}}
                                                                <td>
                                                            {{/ifCond}}

                                                            <span class="tag" onclick="detail(this,{{id}})" style="background-color: #3298dc;color: #fff;"><i class="feather icon-align-left"></i>Detail</span>

                                                            {{#ifCond active  '===' true}}
                                                                {{#ifCond type_account  '===' 0}}
                                                                    <span class="tag" style="background-color: #ffdd57;color: #fff;" onclick="deactivate(this,{{id}})"><i class="feather icon-minus"></i>Deactive</span>
                                                                {{else}}

                                                                 {{/ifCond}}
                                                            {{else}}
                                                                <span class="tag" style="background-color: #00d1b2;color: #fff;" onclick="activate(this,{{id}})"><i class="feather icon-plus"></i>Active</span>
                                                            {{/ifCond}}
                                                            
                                                            </td>
                                                        </tr>
                                                        {{/each}}
                                                       
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <nav class="ml-auto" style="margin-right: 1rem ;">
                                            <ul class="pagination">
                                                {{#paginate pagination type="first"}}
                                                <li {{#if disabled}}class="disabled page-item" {{/if}}><a
                                                        href="?p={{n}}" class="page-link">First</a></li>
                                                {{/paginate}}
                                                {{#paginate pagination type="previous"}}
                                                <li {{#if disabled}}class="disabled page-item" {{/if}}><a
                                                        class="page-link" href="?p={{n}}">«</a>
                                                </li>
                                                {{/paginate}}
                                                {{#paginate pagination type="middle" limit="4"}}
                                                <li {{#if active}}class="active page-item" {{/if}}><a class="page-link"
                                                        href="?p={{n}}">{{n}}</a>
                                                </li>
                                                {{/paginate}}
                                                {{#paginate pagination type="next"}}
                                                <li {{#if disabled}}class="disabled page-item" {{/if}}><a
                                                        class="page-link" href="?p={{n}}">»</a>
                                                </li>
                                                {{/paginate}}
                                                {{#paginate pagination type="last"}}
                                                <li {{#if disabled}}class="disabled page-item" {{/if}}><a
                                                        class="page-link" href="?p={{n}}">Last</a>
                                                </li>
                                                {{/paginate}}
                                            </ul>
                                        </nav>
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5>Add New User</h5>
                                        </div>
                                        <div class="card-block">
                                            <div class="row" id="detailForm">
                                                <h5>Detail</h5>
                                                <hr>
                                                <div class="col-md-12">
                                                    <input class="mb-3 form-control form-control-lg" type="text" placeholder="">
                                                    <input class="mb-3 form-control" type="text" placeholder="">
                                                    <input class="mb-3 form-control form-control-sm" type="text" placeholder="">
                                                </div>
                                            </div>
                                            <form action="" id="reset_form">
                                            <div class="row">
                                                
                                                <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label for="email">Email address</label>
                                                            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="password_exp">Password</label>
                                                            <input type="password" class="form-control" id="password_exp" placeholder="Password">
                                                        </div>
                                                        
                                                        <div class="form-group">
                                                            <label for="firstname_exp">First name</label>
                                                            <input type="text" class="form-control" id="firstname_exp" placeholder="First Name">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="lastname_exp">Last name</label>
                                                            <input type="text" class="form-control" id="lastname_exp" placeholder="Last Name">
                                                        </div>
                                                </div>
                                                <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label>Phone</label>
                                                            <input type="text" id="phone_exp" class="form-control" minlength="11" maxlength="11" placeholder="84838405444">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>DOB</label>
                                                            <input type="date" id="dob_exp" class="form-control" placeholder="dob">
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="type_exp">Type</label>
                                                            <select class="form-control" id="type_exp">
                                                                <option>Admin</option>
                                                                <option>User</option>
                                                            </select>
                                                        </div>
                                                </div>
                                               
                                            </div>
                                            </form>
                                            <button id="add" class="btn btn-primary"><i class="feather icon-plus"></i>Add</button>
                                            <button id="clear" class="btn btn-warning"><i class="feather icon-trash"></i>Clear</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
